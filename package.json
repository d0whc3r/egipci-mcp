{
  "name": "@d0whc3r/egipci-mcp",
  "version": "1.1.0",
  "description": "MCP server for querying archaeological information from Catalunya's EGIPCI service",
  "main": "dist/index.js",
  "bin": {
    "egipci-mcp": "dist/index.js"
  },
  "files": [
    "dist/index.js"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup --env.prod",
    "start": "node dist/index.js",
    "dev": "tsx --watch src/index.ts",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\" \"*.{json,md}\"",
    "format:release": "prettier --write \"CHANGELOG.md\" \"package.json\"",
    "type-check": "tsc --build --verbose --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=default --reporter=github-actions --reporter=junit --outputFile.junit=./test-results/junit.xml",
    "clean": "rm -rf dist coverage *.tsbuildinfo",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "egipci",
    "gencat",
    "archaeological",
    "server",
    "catalunya"
  ],
  "author": "d0whc3r",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "got": "^14.4.9",
    "zod": "^3"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22",
    "@vitest/coverage-v8": "^3.2.4",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "oxlint": "^1.19.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.9",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "oxlint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/d0whc3r/egipci-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/d0whc3r/egipci-mcp/issues"
  },
  "homepage": "https://github.com/d0whc3r/egipci-mcp#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
