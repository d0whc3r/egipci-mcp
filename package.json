{
  "name": "@d0whc3r/egipci-mcp",
  "version": "1.0.0",
  "description": "Servidor MCP para consultar información arqueológica desde el servicio EGIPCI de la Generalitat de Catalunya",
  "main": "dist/index.js",
  "bin": {
    "egipci-mcp": "dist/index.js"
  },
  "files": [
    "dist/index.js"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup --env.prod",
    "build:clean": "rm -rf dist && npm run build",
    "start": "node dist/index.js",
    "dev": "tsx --watch src/index.ts",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\" \"*.{json,md}\"",
    "type-check": "tsc --build --verbose --noEmit",
    "type-check:app": "tsc --noEmit --project tsconfig.app.json",
    "type-check:test": "tsc --noEmit --project tsconfig.test.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=default --reporter=github-actions --reporter=junit --outputFile.junit=./test-results/junit.xml",
    "check-all": "npm run type-check && npm run lint && npm run format:check && npm run test && npm run build",
    "pre-push": "npm run type-check && npm run lint && npm run test && npm run build",
    "fix-all": "npm run lint:fix && npm run format",
    "clean": "rm -rf dist dist-test node_modules/.cache coverage *.tsbuildinfo",
    "clean:build": "rm -rf dist dist-test *.tsbuildinfo",
    "dev:full": "pnpm run clean:build && pnpm run type-check && pnpm run lint && pnpm run test:coverage && pnpm run build",
    "ci:local": "pnpm run type-check && pnpm run lint && pnpm run format:check && pnpm run test:ci && pnpm run build",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "egipci",
    "gencat",
    "arqueologia",
    "archaeological",
    "server"
  ],
  "author": "d0whc3r",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "got": "^14.4.9",
    "zod": "^3"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.6.2",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "oxlint": "^1.19.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.9",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "oxlint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/d0whc3r/egipci-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/d0whc3r/egipci-mcp/issues"
  },
  "homepage": "https://github.com/d0whc3r/egipci-mcp#readme",
  "publishConfig": {
    "access": "public"
  }
}
